<%= provide(:title, "Login" ) %>

<div class="devise">

  <div class="devise-banner">
    <h1>GTFO</h1>
  </div>

  <div class="devise-form">

  <h2>login</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <% if flash.any? %>
        <div class="flash-messages-devise right">
          <%= render 'shared/flash_messages' %>
        </div>
      <% end %>

      <div class="field-row">
        <%= f.email_field :email, autofocus: true , placeholder: 'Enter Email' ,class: "input" %>
      </div>

      <div class="field-row">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Enter Password' ,class: "input"  %>
      </div>

      <div class="login-actions">
  
        <%= f.submit "Log in", class: "login-button" %>

        <%= render "devise/shared/links" %>

      </div>

    <% end %>

  </div>

</div>