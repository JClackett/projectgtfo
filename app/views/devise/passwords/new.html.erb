<%= provide(:title, "Forgot Password" ) %>

<div class="devise">

	<div class="devise-banner">
		<h1>lynkr</h1>
	</div>

	<div class="devise-form">

		<h2>forgot password?</h2>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

			<% if flash.any? %>
				<div class="flash-messages-devise right">
					<%= render 'shared/flash_messages' %>
				</div>
			<% end %>

			<div class="field-row">
				<%= f.email_field :email, autofocus: true , placeholder: 'Enter Email' ,class: "input" %>
			</div>

			<div class="login-actions">

				<%= f.submit "Send Me Password", class: "login-button" %>

				<%= render "devise/shared/links" %>

			</div>

		<% end %>

	</div>

</div>
